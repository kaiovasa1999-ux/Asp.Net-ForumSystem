@model ForumSystem.Web.ViewModels.Post.PostViewModel

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        relative_urls: true,
        remove_script_host: true,
        convert_urls: true,
        plugins: [
            "image paste table link code media fullscreen wordcount searchreplace lists"
        ]
    });
</script>


<form method="post" asp-action="AddPost">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Contnet"></label>
        <textarea asp-for="Contnet" class="form-control"></textarea>
        <span asp-validation-for="Contnet" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="CategoryId">Type</label>
        <select asp-for="CategoryId">
            @foreach (var gener in Model.Categories)
            {
                <option value="@gener.Id">@gener.Title</option>
            }
        </select>
    </div>
    <br />
    <input type="submit" class="btn btn-primary" value="Submit" />
</form>