@model ForumSystem.Web.ViewModels.Post.PostViewModel

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>


<form method="post" asp-action="AddPost">

    <div class="form-group">
        <label asp-for="Title"></label>
        <textarea asp-for="Title" class="form-control"></textarea>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Contnet"></label>
        <textarea asp-for="Contnet" class="form-control"></textarea>
        <span asp-validation-for="Contnet" class="text-danger"></span>
    </div>
    <br />
    <div class="form-control">
        <label asp-for="CategoryId">Type</label>
        <select asp-for="CategoryId">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Title</option>
            }
        </select>
    </div>
    <br />
    <input type="submit" class="btn btn-primary" value="Submit" />
</form>